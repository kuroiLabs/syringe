{
	"name": "@kuroi/syringe",
	"version": "3.0.0",
	"description": "TypeScript dependency injection framework",
	"main": "index.js",
	"scripts": {
		"build": "shx rm -Rf dist && tsc --project tsconfig.build.json && shx cp package.json dist/package.json && shx cp README.md dist/README.md",
		"pack": "npm pack ./dist",
		"start:publish": "npm publish dist --access=public --scope=@kuroi",
		"test:publish": "npm publish dist --access=public --scope=@kuroi --dry-run",
		"test": "ts-node tests/test.ts",
		"test:isolate": "ts-node tests/isolated-test.ts"
	},
	"keywords": [
		"di",
		"dependency",
		"injection"
	],
	"author": "kuro <kuro@kuroi.io>",
	"license": "ISC",
	"devDependencies": {
		"shx": "^0.3.3",
		"ts-node": "^10.2.1",
		"typescript": "^5.8.3",
		"vitest": "^3.1.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kuroiLabs/syringe.git"
	}
}
